	</definition>
	<definition name="Security/Vista/vista" extends="materializeTemplateForm">
    	<put-attribute name="titulo" value="Registro de Vistas" />
		<put-attribute name="content" value="/WEB-INF/views/Security/Vista/vista.jsp"/>
	</definition>
