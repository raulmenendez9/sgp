<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!-- Definición de Tile original que se basa en el archivo "_template.jsp" 
		este archivo debe tener definiciones de atributos "titulo", "menu_navegacion", 
		"content" y "menu_usuario" por lo menos -->
	<definition name="defaultTemplate" template="WEB-INF/template/_template.jsp">
		<put-attribute name="titulo" value="SCONTA" />
		<put-attribute name="menu_navegacion" value="/WEB-INF/menu/menu_navegacion.jsp" />
		<put-attribute name="menu_usuario" value="/WEB-INF/menu/menu_usuario.jsp" />
		<put-attribute name="content" value="/WEB-INF/template/defaultContent.jsp" />
		<put-attribute name="content_javascript" value="" />
	</definition>
	
	
	<definition name="materializeTemplate" template="WEB-INF/template/_template_materialize.jsp">
		<put-attribute name="titulo" value="SCONTA" />
		<put-attribute name="content" value="/WEB-INF/template/defaultContent.jsp" />
	</definition>
	
	
	
	
	<!--Definición de controlador "inicio": Esta definición es la que busca 
		el controlador por el atributo "name" Si un controlador tiene 'return "inicio";' 
		abrirá los elementos que le corresponden Extends "defaultTemplate" utiliza 
		la definición de arriba para heredar las páginas o textos del template original. 
		Se puede sobreescribir cualquiera. Por ejemplo, para una pantalla de "login" 
		podríamos utilizar <put-attribute name="menu_usuario" value=" " /> para que 
		no salga ningún menu -->
	<definition name="inicio" extends="defaultTemplate">
		<put-attribute name="titulo" value="Inicio" />
		<put-attribute name="content" value="/WEB-INF/views/home.jsp" />
	</definition>
	
<!-- 	SECURITY -->
	<definition name="Security/Rol/rol" extends="defaultTemplate">
		<put-attribute name="titulo" value="Gestión de Roles del Sistema" />
		<put-attribute name="content" value="/WEB-INF/views/Security/Rol/rol.jsp" />
		<put-attribute name="content_javascript"
			value="/WEB-INF/views/Security/Rol/rol-script.jsp" />
	</definition>
	<definition name="Security/Menu/menu" extends="defaultTemplate">
		<put-attribute name="titulo" value="Registro de Menus" />
		<put-attribute name="content" value="/WEB-INF/views/Security/Menu/menu.jsp" />
		<put-attribute name="content_javascript"
			value="/WEB-INF/views/Security/Menu/menu-script.jsp" />
	</definition>
	<definition name="Security/Vista/vista" extends="defaultTemplate">
    	<put-attribute name="titulo" value="Registro de Vistas" />
		<put-attribute name="content" value="/WEB-INF/views/Security/Vista/vista.jsp"/>
			<put-attribute name="content_javascript" value="/WEB-INF/views/Security/Vista/vista-script.jsp" />
	</definition>
<!--    /SECURITY -->
	
<!-- 	ADMINISTRATION -->
	<definition name="Administration/Usuario/usuario" extends="defaultTemplate">
    	<put-attribute name="titulo" value="Registro de Usuarios" />
		<put-attribute name="content" value="/WEB-INF/views/Administration/Usuario/usuario.jsp"/>
		<put-attribute name="content_javascript" value="/WEB-INF/views/Administration/Usuario/usuario-script.jsp" />
	</definition>
	<definition name="Administration/Empresa/empresa" extends="materializeTemplate">
    	<put-attribute name="titulo" value="Registro de Empresas" />
		<put-attribute name="content" value="/WEB-INF/views/Administration/Empresa/empresa.jsp"/>
	</definition>
	
	<definition name="Administration/Empleado/empleado" extends="defaultTemplate">
    	<put-attribute name="titulo" value="Registro de Empresas" />
		<put-attribute name="content" value="/WEB-INF/views/Administration/Empleado/empleado.jsp"/>
		<put-attribute name="content_javascript" value="/WEB-INF/views/Administration/Empleado/empleado-script.jsp" />
	</definition>
<!-- 	/ADMINISTRATION -->	
	
<!-- 	VARIETY -->
	<definition name="Variety/Error" extends="defaultTemplate">
    	<put-attribute name="titulo" value="ERROR!" />
		<put-attribute name="content" value="/WEB-INF/views/Variety/Error.jsp"/>
	</definition>
	<definition name="403" extends="defaultTemplate">
    	<put-attribute name="titulo" value="ERROR!" />
		<put-attribute name="content" value="/WEB-INF/views/403.jsp"/>
	</definition>
<!-- 	/VARIETY -->	
</tiles-definitions>